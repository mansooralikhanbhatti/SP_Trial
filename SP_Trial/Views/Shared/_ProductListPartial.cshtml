<table class="table table-striped" style="border: 1px solid #000;">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
            </tr>
        }
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4">No products found.</td>
            </tr>
        }
    </tbody>
</table>
