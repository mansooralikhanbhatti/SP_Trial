@model List<Product>

@{
    ViewData["Title"] = "Products List";
}

<h1>Products List</h1>

<form id="searchForm">
    <h5><label for="keyword">Search by Product Name</label></h5>
    <input type="text" id="keyword" placeholder="Enter keyword" />
    <button type="button" id="searchButton">Search</button>
</form>

<div id="results">
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchButton').click(function () {
                var keyword = $('#keyword').val();
                $.ajax({
                    url: '/Product/SearchProducts',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ keyword: keyword }), // Send keyword as an object
                    success: function (data) {
                        var results = $('#results');
                        results.empty();
                        if (data.length > 0) {
                            var table = $('<table></table>'); // Create a new table element
                            table.append('<tr><th>Product ID</th><th>Product Name</th><th>Price</th><th>Description</th></tr>');
                            $.each(data, function (index, product) {
                                // Check if the productName matches the keyword
                                if (product.productName.toLowerCase().includes(keyword.toLowerCase())) {
                                    var row = $('<tr></tr>'); // Create a new table row
                                    row.append('<td>' + product.productID + '</td>');
                                    row.append('<td>' + product.productName + '</td>');
                                    row.append('<td>' + product.price + '</td>');
                                    row.append('<td>' + product.description + '</td>');
                                    table.append(row); // Append row to the table
                                }
                            });
                            results.append(table); // Append table to results
                        } else {
                            results.append('<p>No Products Found</p>');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            });
        });
    </script>