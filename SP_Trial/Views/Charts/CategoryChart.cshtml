@{
    ViewData["Title"] = "Active Categories Chart";
}

<div>
    <canvas id="categoryChart" width="400" height="200"></canvas>
</div>

@section scripts {
    <script>
        var ctx = document.getElementById('categoryChart').getContext('2d');
        var categoryNames = @Html.Raw(Json.Serialize(ViewBag.CategoryNames));
        var isActive = @Html.Raw(Json.Serialize(ViewBag.IsActive));

        var categoryChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: categoryNames,
                datasets: [{
                    label: 'Active Categories',
                    data: isActive,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
            }
        });
    </script>
}
